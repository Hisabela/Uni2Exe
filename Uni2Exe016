import java.util.Scanner;
public class Uni2Exe16 {

    public static void main(String[] args) {
     
        Scanner teclado = new Scanner (System.in);
        
       // Uma fábrica de refrigerantes vende seu produto em três formatos: lata de 350 ml, garrafa de 600 ml e garrafa de 2 litros.
       // Se um comerciante compra uma determinada quantidade de cada formato, informe quantos litros de refrigerante ele comprou.

    System.out.println("Qual a quantidade você precisará de uma Lata de 350ml? ");
    int quant1 = teclado.nextInt();

    System.out.println("Qual a quantidade você precisará de uma Garrafa de 600ml? ");
    int quant2 = teclado.nextInt();

    System.out.println("Qual a quantidade você precisará de uma Garrafa de 2 Litros? ");
    int quant3 = teclado.nextInt();

    int soma1 = quant1 * 350;
    int soma2 = quant2 * 600;
    int soma3 = quant3 * 2000;

    int valorFinal = soma1+soma2+soma3;

// pesquisar como arrendondar o valor

    System.out.println("Você comprou " +String.format("%,d", (int) valorFinal)+ " de litros");

        teclado.close();
    }
}
