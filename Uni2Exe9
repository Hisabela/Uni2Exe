import java.util.Scanner;
public class Uni2Exe9 {

//Uma pessoa foi até uma casa de câmbio trocar dólares por reais. Para isto ela entregou um valor em dólares para o atendente. 
//Considerando que o atendente tem a cotação do dólar, calcule quantos reais o atendente deve devolver para a pessoa.

public static void main (String [] args){

 Scanner teclado = new Scanner (System.in);

 double dólar = 5.88;

 System.out.println("Atendente: Olá, qual o valor em doláres você gostaria de trocar por reais? ");
 double valor = teclado.nextDouble();

 double resultado = dólar*valor;

 System.out.println("Aqui estáo seu dinheiro em reais, ficou no valor de "+resultado+ "reais." );

teclado.close();
 }
}
